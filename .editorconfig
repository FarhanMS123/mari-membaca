# .editorconfig

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space

[*.html]
indent_size = 4

[*.css]
indent_size = 2

[*.{js,ts,c,cpp,java}]
indent_size = 4

# Templating
[*.{jsx.tsx}]
indent_size = 2

[*.json]
indent_size = 2

[*.config.{ts,js}]
indent_size = 2

[*.sql]
indent_size = 4
